generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  // Connection URLs are no longer supported in schema files.
  // Move your database connection configuration to prisma.config.ts as described here:
  //https://pris.ly/d/config-datasource
}

model User {
  id             String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  email          String         @unique
  password_hash  String
  avatar         String?
  created_at     DateTime       @default(now())
  refresh_tokens RefreshToken[]
  teams          Team[]

  @@map("users")
}

model RefreshToken {
  id         String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  token_hash String
  user_id    String    @db.Uuid
  expires_at DateTime
  created_at DateTime  @default(now())
  revoked_at DateTime?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([token_hash])
  @@map("refresh_tokens")
}

model Team {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id      String   @db.Uuid
  name         String
  color        String
  badge        String?
  year         Int?
  sponsor      String?
  sponsor_logo String?
  created_at   DateTime @default(now())
  updated_at   DateTime @updatedAt

  user    User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  players Player[]
  lineups Lineup[]
  matches Match[]

  @@index([user_id])
  @@map("teams")
}

enum Position {
  GK
  DEF
  MID
  FWD
}

enum FieldRole {
  GK // Goleiro  
  // Defesa
  RL // Lateral Direito
  RCB // Zagueiro Direito
  LCB // Zagueiro Esquerdo
  LL // Lateral Esquerdo
  // Meio de Campo
  RM // Meia Direita
  CM // Volante / Centro
  LM // Meia Esquerda
  // Ataque
  RW // Ponta Direita
  ST // Centroavante
  LW // Ponta Esquerda
}

model Player {
  id         String     @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  team_id    String     @db.Uuid
  number     Int
  name       String
  birth_date DateTime   @db.Date
  avatar     String?
  position   Position
  field_role FieldRole?
  created_at DateTime   @default(now())
  updated_at DateTime   @updatedAt

  team       Team        @relation(fields: [team_id], references: [id], onDelete: Restrict)
  lineups    Lineup[]    @relation("LineupStarters")
  bench      Lineup[]    @relation("LineupBench")
  matchCards MatchCard[]

  @@index([team_id])
  @@map("players")
}

model Lineup {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  team_id    String   @db.Uuid
  name       String
  formation  String   @default("4-3-1")
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  team     Team     @relation(fields: [team_id], references: [id], onDelete: Restrict)
  starters Player[] @relation("LineupStarters")
  bench    Player[] @relation("LineupBench")

  @@index([team_id])
  @@map("lineups")
}

enum CardType {
  YELLOW
  RED
}

model Match {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  team_id        String   @db.Uuid
  opponent_name  String
  team_score     Int      @default(0)
  opponent_score Int      @default(0)
  date           DateTime @db.Date
  notes          String?
  created_at     DateTime @default(now())
  updated_at     DateTime @updatedAt

  team  Team        @relation(fields: [team_id], references: [id], onDelete: Restrict)
  cards MatchCard[]

  @@index([team_id])
  @@map("matches")
}

model MatchCard {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  match_id  String   @db.Uuid
  player_id String   @db.Uuid
  type      CardType
  minute    Int?

  match  Match  @relation(fields: [match_id], references: [id], onDelete: Cascade)
  player Player @relation(fields: [player_id], references: [id], onDelete: Restrict)

  @@index([match_id])
  @@index([player_id])
  @@map("match_cards")
}
